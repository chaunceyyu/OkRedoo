<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/gift_content"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="0dp">

        <RelativeLayout
            android:id="@+id/infoRl"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="9dp"
            android:background="@drawable/gift_anim_bg"
            android:paddingRight="0dp">

            <ImageView
                android:id="@+id/headIv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:src="@drawable/youzi_logo"/>

            <LinearLayout
                android:id="@+id/llCon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@id/headIv"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nickNameTv"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:maxWidth="150dp"
                    android:minWidth="60dp"
                    android:text="Name"/>

                <TextView
                    android:id="@+id/infoTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/nickNameTv"
                    android:layout_below="@id/nickNameTv"
                    android:lines="1"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:maxWidth="150dp"
                    android:minWidth="60dp"
                    android:text="DESC"
                    android:textColor="#FFEF70"
                    android:textSize="10dp"/>
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/giftIv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/infoRl"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/animation_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/infoRl"
            android:gravity="center"
            android:padding="6dp"
            android:shadowColor="#7f000000"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="x11"
            android:textColor="#EFB518"
            android:textSize="25dp"/>

    </RelativeLayout>

</RelativeLayout>