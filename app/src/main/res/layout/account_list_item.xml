<?xml version="1.0" encoding="utf-8"?>
<com.youzi.okredoo.view.AccountListItem xmlns:android="http://schemas.android.com/apk/res/android"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:padding="10dp">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="5dp"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">

        <ImageView android:id="@+id/photo"
                   android:layout_width="35dp"
                   android:layout_height="35dp"
                   android:src="@drawable/youzi_logo"/>

        <TextView android:id="@+id/username"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="10dp"
                  android:lines="1"
                  android:text="昵称"
                  android:textColor="@color/black80"
                  android:textSize="14dp"/>

        <TextView android:id="@+id/tokenState"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="5dp"
                  android:lines="1"
                  android:text="(生效)"
                  android:textColor="@color/green_weixin"
                  android:textSize="12dp"/>

    </LinearLayout>


    <TextView android:id="@+id/phone"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp"
              android:lines="1"
              android:text="手机号码"
              android:textColor="@color/black80"
              android:textSize="14dp"/>

    <TextView android:id="@+id/idcode"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp"
              android:lines="1"
              android:text="ID号"
              android:textColor="@color/black80"
              android:textSize="14dp"/>

    <TextView android:id="@+id/token"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp"
              android:lines="1"
              android:text="Token"
              android:textColor="@color/black80"
              android:textSize="14dp"
              android:visibility="gone"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="0dp"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:lines="1"
                  android:text="金币 "
                  android:textColor="@color/black80"
                  android:textSize="14dp"/>

        <TextView android:id="@+id/coin"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="5dp"
                  android:lines="1"
                  android:text="0"
                  android:textColor="@color/king_one"
                  android:textSize="16dp"
                  android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/bottomLayout"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="0dp"
                  android:gravity="center_vertical|right">

        <Button android:id="@+id/addOnlineBtn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="加入在线列表"
                android:textSize="12dp"/>

        <Button android:id="@+id/tixianBtn"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:text="提现"
                android:textSize="12dp"/>

        <Button android:id="@+id/editInfoBtn"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:text="资料"
                android:textSize="12dp"/>

        <Button android:id="@+id/editBtn"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:text="账号"
                android:textSize="12dp"/>

        <Button android:id="@+id/deleteBtn"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:text="删除"
                android:textColor="@color/red_weixing"
                android:textSize="12dp"/>

    </LinearLayout>


    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:layout_marginTop="5dp"
          android:background="@color/split_color"/>

</com.youzi.okredoo.view.AccountListItem>